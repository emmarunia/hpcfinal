@page "/plant-details"
@page "/plant-details/{plantId}"

<h3>Plant Details</h3>

<div>
     @*<img src="@plant.default_image.thumbnail">*@
     <p>@plant.description</p>
     
     @if(sunCareGuide is not null)
    {
        <p>Sunlight care: @sunCareGuide.description</p>
    }
    @if(waterCareGuide is not null)
    {
        <p>Watering care: @waterCareGuide.description</p>
    }


     @if (isFavorite == false){
            <p>
                <button type="button" class="btn btn-primary" @onclick="() => AddFavorite(plant.id.ToString())">Add to favorites</button> 
            </p>
        }
        else
        {
             <p>
                <button type="button" class="btn btn-primary" @onclick="() => RemovePlant(plant.id.ToString())">Remove from favorites</button>
            </p>
        }
</div>

