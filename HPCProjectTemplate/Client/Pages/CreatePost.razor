@page "/create/post"
@inject NavigationManager Navigation

<h3>Create New Post</h3>

<form class="AddPost">
    <label>Choose Topic</label>
    <select class="form-control" @bind="Topic">
        <option>Gardening</option>
        <option>Indoor Plants</option>
        <option>Outdoor Plants</option>
        <option>Regional Plants</option>
        <option>Gardening Adjacent</option>
    </select>
    <div class="form-group">
        <label>Topic</label>
        <input class="form-control" @bind="Title" />
    </div>
    <div class="form-group">
        <label>Post</label>
        <textarea class="form-control" @bind="Content"></textarea>
        <input type="hidden" @bind="Time" />
    </div>
    <br />
    <button type="button" class="btn btn-primary" @onclick="() => AddPost()">Submit Post</button>
</form>
