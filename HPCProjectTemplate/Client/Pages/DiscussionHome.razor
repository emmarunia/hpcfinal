@page "/community"
@inject NavigationManager Navigation

<div class="mt-header">
    <section id="services" class="services section-bg">
      <div class="container">

        <div class="section-title">
          <h2>Community</h2>
          <p>Click on a topic to get help with troublesome plants</p>
        </div>

        <div class="row">
            @foreach (HPCProjectTemplate.Shared.Topics topic in Topics)
                {
                    <div class="col-xl-4 col-md-6 mt-4" data-aos="zoom-in" data-aos-delay="100">
                        @if(topic.Id ==1){
                          <div class="icon-box">
                          <div class="icon"><i class="bi bi-flower2"></i></div>
                          <h4><a href="javascript:void(0)" @onclick="() => ChoosePage(topic.Id)">@topic.Title</a></h4>
                          <p>@topic.Description</p>
                        </div>
                        }
                        @if(topic.Id ==2){
                            <div class="icon-box">
                          <div class="icon"><i class="bi bi-house-door-fill"></i></div>
                          <h4><a href="javascript:void(0)" @onclick="() => ChoosePage(topic.Id)">@topic.Title</a></h4>
                          <p>@topic.Description</p>
                        </div>
                        }
                        @if(topic.Id ==3){
                            <div class="icon-box">
                          <div class="icon"><i class="bi bi-tree-fill"></i></div>
                          <h4><a href="javascript:void(0)" @onclick="() => ChoosePage(topic.Id)">@topic.Title</a></h4>
                          <p>@topic.Description</p>
                        </div>
                        }
                        @if(topic.Id ==4){
                            <div class="icon-box">
                          <div class="icon"><i class="bi bi-geo-alt-fill"></i></div>
                          <h4><a href="javascript:void(0)" @onclick="() => ChoosePage(topic.Id)">@topic.Title</a></h4>
                          <p>@topic.Description</p>
                        </div>
                        }
                        @if(topic.Id ==5){
                            <div class="icon-box">
                          <div class="icon"><i class="bi bi-bug-fill"></i></div>
                          <h4><a href="javascript:void(0)" @onclick="() => ChoosePage(topic.Id)">@topic.Title</a></h4>
                          <p>@topic.Description</p>
                        </div>
                        }
                        
                      </div>

                }
   

        </div>

      </div>
    </section><!-- End Services Section -->
    

</div>


@code {
    void ChoosePage(int id)
    {
        switch (id)
        {
            case 1:
                Navigation.NavigateTo("/community/gardening");
                break;
            case 2:
                Navigation.NavigateTo("/community/indoor/plants");
                break;
            case 3:
                Navigation.NavigateTo("/community/outdoor/plants");
                break;
            case 4:
                Navigation.NavigateTo("/community/regional/plants");
                break;
            case 5:
                Navigation.NavigateTo("/community/gardening/adjacent");
                break;
        }

    }
}
