@inject NavigationManager Navigation
@page "/personal"
@using HPCProjectTemplate.Shared;

<div class="mt-header">
    @if (user is not null && user.Birthday != "")
{
    <h3>@user.FirstName @user.LastName</h3>
    <div>
        <h1>Profile</h1>
        <p>First Name: @user.FirstName</p>
        <p>Last Name: @user.LastName</p>
        <p>Email: @user.Email</p>
        <p>Birthday:@user.Birthday</p>
    </div>
}

@if (user is not null && user.Birthday == "")
{
    <h3>@user.FirstName @user.LastName</h3>
    <div>
        <h1>Profile</h1>
        <p>First Name: @user.FirstName</p>
        <p>Last Name: @user.LastName</p>
        <p>Email: @user.Email</p>
        <p>
            Enter birthday here:
           
        </p>
        <input type="text" class="form-control w-50" @bind="Birthday" placeholder="Add birthday for 10% the whole month!"/>
        <button type="button" class="btn btn-primary" @onclick="() => AddBirthday()">Add Birthday</button>
    </div>
}
</div>


