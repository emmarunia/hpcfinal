@page "/admin/edit-user/{userId}"
@inject NavigationManager Navigation

<div class="mt-header">
<h3>Edit User</h3>

<EditForm Model="@EditUser" OnValidSubmit="UpdateUser">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="mb-3 mt-3">
        <label class="form-label">
            Username:
        </label>
        @*this is the equivalent of the Input type="text" in HTML*@
        <InputText class="form-control" @bind-Value="EditUser.UserName" />
    </div>

    <div class="mb-3 mt-3">
        <label class="form-label">
            Email:
        </label>
        <InputText class="form-control" @bind-Value="EditUser.Email" />
    </div>
    <div class="mb-3 mt-3">
        <label class="form-check-label">
            Email Confirmed:
        </label>
        <InputCheckbox class="form-check-input" @bind-Value="EditUser.EmailConfirmed" />
    </div>
    <div class="mb-3 mt-3">
        <label class="form-check-label">
            Admin:
        </label>
        <InputCheckbox class="form-check-input" @bind-Value="EditUser.IsAdmin" />
    </div>
    <div class="mb-3 mt-3">
        <label class="form-label">
            First Name:
        </label>
        <InputText class="form-control" @bind-Value="EditUser.FirstName" />
        <ValidationMessage For="@(() => EditUser.FirstName)" />
    </div>
    <div class="mb-3 mt-3">
        <label class="form-check-label">
            Last Name:
        </label>
        <InputText class="form-control" @bind-Value="EditUser.LastName" />
    </div>
    <button type="submit" class="btn btn-primary" action="/admin">Submit</button>
</EditForm>
</div>
